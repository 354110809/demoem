/* pages/smrz/index.wxss */
.smrzPage{
   padding-bottom: 20px;
}
.smrzPage .top-box{
   width: 100vw;
   height: 30vw;
   background: linear-gradient(180deg, #812023 0%, #B9393B 100%);
   box-sizing: border-box;
   padding:23px 18px;
   color:#fff;
   font-size: 10.5pt;
   font-weight: 600;
}
.smrzPage .top-box>view:last-child{
   padding:8px 0;
   font-weight: normal;
   font-size: 9pt;
   color: rgba(255, 255, 255, 0.6);
   line-height: 18px;
}

.inp-line{
   display: flex;
   border-bottom:1px solid #EAEAEA;
   padding:4px 18px;
   font-size: 12pt;
   color:#111;
}
.inp-line .label{
   width:120px;
   height:40px;
   display: flex;
   align-items: center;
   flex:none;
}
.inp-line .text{
   flex-grow: 1;
   height:40px;
   display: flex;
   align-items: center;
}

.inp-box{
   display: flex;
   padding: 35px 18px;
}
.inp-box .pic{
   width:143px;
   height:90px;
   background: #F0F4F7;
   border-radius: 6px;
   margin-right: 18px;
   border: 1px dashed #E6E8EA;
   overflow: hidden;

}
.inp-box .pic .bj{
   width:100%;
   height:100%;
   display: flex;
   align-items: center;
   justify-content: center;
   flex-direction: column;
   font-size: 9pt;
   color: #FB605F;
}
.inp-box .pic .bj .icon{
   width:31px;
   height:27px;
   margin-bottom: 10px;
   background:url(data:image/png;base64,) no-repeat center/100% 100%;
}
.inp-box .pic.br{
   width:90px;
   height:90px;
}
.inp-box .pic .image{
   width:100%;
   height:100%;
}

.inp-box-btn{
   width:87.2%;
   margin:0 auto;
   color:#fff;
   height:54px;
   display: flex;
   align-items: center;
   justify-content: center;
   font-size: 12.75pt;
   font-weight: bold;
   background: linear-gradient(266.37deg, #FB3A74 -14.53%, #FF6230 113.67%);
   border-radius: 72px;
}