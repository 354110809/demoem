/* pages/user-basic-info-q/index.wxss */
.editInfoQPage{
   background:#fff;
}
.editInfoQPage.ovh{
   height:100vh;
   overflow: hidden;
}
.editInfoQPage .body{
   padding-bottom: 30px;
}
.editInfoQPage .body>view:nth-last-child(2){
   margin-bottom: 25px;
}

/* 头像区域 */
.portrait{
   padding:50px 0 40px;
   display: flex;
   align-items: center;
   justify-content: center;
}
.portrait .bj{
   width:100px;
   height:100px;
   border-radius: 50%;
   position: relative;
}
.portrait .bj .text{
   position: absolute;
   top:50%;
   left:50%;
   transform: translate(-50%,-50%);
   font-size: 9pt;
   color:#6F1F08;
}
.portrait .image{
   width:100px;
   height:100px;
   border-radius: 50%;
   display: block;
}

.title_box{
   color:#6F1F08;
   font-size:13.5pt;
   font-weight: 600;
   padding:0px 18px 20px;
}

.line_box{
   padding:0 18px;
   display: flex;
   height:48px;
   border-bottom: 1px solid #eaeaea;
   align-items: center;
}

.line_box .line_box_label{
   width:100px;
   flex:none;
   color: #111111;
   font-size: 12pt;
}
.line_box .line_box_inner{
   flex-grow: 1;
   height:100%;
}
.line_box .picker_box{
   background:url(data:image/png;base64,) no-repeat right center/6px auto;
}
.line_box .picker_box .picker,
.line_box .picker_box .notPicker{
   width:100%;
   height:48px;
   display: flex;
   align-items: center;
   color:#999999;
   font-size:12pt;
}
.line_box .picker_box .picker{
   color:#111;
}
.line_box .input_box .input{
   width:100%;
   height:100%;
   color:#111;
   font-size:12pt;
}
.line_box .input_box .inputP{
   color:#999999;
}

.line-box-btn{
   color:#fff;
   width:86vw;
   height:54px;
   display: flex;
   align-items: center;
   justify-content: center;
   font-size: 12.75pt;
   font-weight: bold;
   background: linear-gradient(266.37deg, #FB3A74 -14.53%, #FF6230 113.67%);
   border-radius: 72px;
   margin:0 auto;
}