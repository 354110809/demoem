/* tabbarPages/news/index.wxss */
.body{
   padding-top: 11px;
}
.message{
   padding:18px 12px;
   background:#fff;
   display: flex;
   width:100%;
   box-sizing: border-box;
}
.message .icon-pic{
   flex:none;
   padding-right: 12px;
   position: relative;
}
.message .icon-pic image{
   width:48px;
   height:48px;
   display: block;
}
.message .icon-pic .badge{
   position: absolute;
   top:0px;
   right:5px;
   background: #F70000;
   box-shadow: 0px 0px 4px rgba(255, 0, 0, 0.45);
   border-radius: 10px;
   width:18px;
   height:18px;
   display: flex;
   align-items: center;
   justify-content: center;
   font-size: 8pt;
   color:#fff;
}

.message-system{
   border-radius: 8px;
   margin-bottom: 10px;
}
.message-system .info{
   box-sizing: border-box;
   width:calc( 100% - 60px );
   display: flex;
   flex-direction: column;
   justify-content:space-around;
   padding-right: 20px;
   background: url(data:image/jpeg;base64,) no-repeat right center / 14px 14px;
}
.message-system .info .name{
   font-weight: 600;
   font-size: 12pt;
   color:#111;
   overflow: hidden;
	text-overflow: ellipsis;	
	white-space: nowrap; 
}
.message-system .info .time{
   font-size: 9pt;
   color:#6F6F6F;
}

.message-list{
   background:#fff;
   border-radius: 8px;
   overflow: hidden;
}
.message-list .message-item{
   padding:17px 12px;
   border-bottom: 2px solid #eff4f7;
}
.message-list .message-item .icon-pic image{
   border-radius: 50%;
}
.message-list .message-item .info{
   width:calc( 100% - 60px );
   display: flex;
   flex-direction: column;
   justify-content:space-around;
}
.message-list .info .nameTime{
   flex-grow: 1;
   display: flex;
   align-items: center;
   justify-content:space-between;
}
.message-list .info .nameTime .name{
   font-weight: 600;
   font-size: 12pt;
   color:#111;
   max-width:calc( 100% - 90px );
   flex-grow: 1;
   overflow: hidden;
	text-overflow: ellipsis;	
	white-space: nowrap; 
}
.message-list .info .nameTime .time{
   font-size: 9pt;
   color:#6F6F6F;
}
.message-list .info .text{
   font-size: 9pt;
   color:#6F6F6F;
   overflow: hidden;
	text-overflow: ellipsis;	
	white-space: nowrap; 
}

